{
  "name": "job-application-portal",
  "version": "1.0.0",
  "description": "Full-stack Job Application Portal with React frontend and Node.js backend",
  "private": true,
  "type": "module",
  "scripts": {
    "install:all": "cd client && npm install && cd ../server && npm install",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run server",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:client": "cd client && npm run build",
    "build": "cd client && npm run build",
    "start:server": "cd server && npm start",
    "preview:client": "cd client && npm run preview",
    "lint:client": "cd client && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "job-portal",
    "recruitment",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "",
  "license": "ISC"
}

